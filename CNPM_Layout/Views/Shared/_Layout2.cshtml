<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta content="width=device-width, initial-scale=1.0" name="viewport" />
    <title>Booking Online</title>
    <script src="https://cdn.tailwindcss.com?plugins=forms,typography"></script>
    <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@400;500;700&amp;display=swap" rel="stylesheet" />
    <link href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined" rel="stylesheet" />
    <script>
        tailwind.config = {
            darkMode: "class",
            theme: {
                extend: {
                    colors: {
                        primary: "#ad1a23",
                        "background-light": "#fdfdfb",
                        "background-dark": "#1a1a1a",
                        "surface-light": "#ffffff",
                        "surface-dark": "#2c2c2c",
                        "border-light": "#e5e7eb",
                        "border-dark": "#4a4a4a",
                        "text-primary-light": "#1f2937",
                        "text-primary-dark": "#f3f4f6",
                        "text-secondary-light": "#6b7280",
                        "text-secondary-dark": "#9ca3b0",
                    },
                    fontFamily: {
                        display: ["Roboto", "sans-serif"],
                    },
                    borderRadius: {
                        DEFAULT: "0.375rem",
                    },
                },
            },
        };
    </script>
    <style>
        .seat {
            display: inline-flex;
            align-items: center;
            justify-content: center;
            width: 2.25rem;
            height: 2rem;
            font-size: 0.75rem;
            font-weight: 500;
            cursor: pointer;
            border-radius: 0.25rem;
            transition: background-color 0.2s ease-in-out, transform 0.1s ease-in-out;
            user-select: none;
        }

            .seat:hover:not(.unavailable):not(.selected) {
                transform: scale(1.1);
            }

        .standard {
            border: 1px solid #10b981;
            color: #10b981;
        }

            .standard:hover:not(.unavailable) {
                background-color: #10b981;
                color: white;
            }

        .vip {
            border: 1px solid #ef4444;
            color: #ef4444;
        }

            .vip:hover:not(.unavailable) {
                background-color: #ef4444;
                color: white;
            }

        .sweetbox {
            border: 1px solid #ec4899;
            color: #ec4899;
        }

            .sweetbox:hover:not(.unavailable) {
                background-color: #ec4899;
                color: white;
            }

        .selected {
            background-color: #ad1a23 !important;
            border-color: #ad1a23 !important;
            color: white !important;
        }

        .unavailable {
            background-color: #a1a1aa;
            border-color: #a1a1aa;
            color: #e5e5e5;
            cursor: not-allowed;
        }

        .material-symbols-outlined {
            font-variation-settings: 'FILL' 0, 'wght' 400, 'GRAD' 0, 'opsz' 24;
        }
    </style>
</head>
<body class="font-display bg-background-light dark:bg-background-dark text-text-primary-light dark:text-text-primary-dark">
    <div class="min-h-screen">
        <header class="bg-primary text-white shadow-md">
            <div class="container mx-auto px-4 py-4">
                <h1 class="text-2xl font-bold tracking-wider text-center">BOOKING ONLINE</h1>
            </div>
        </header>
        @RenderBody()
    </div>
    <script>
        document.addEventListener('DOMContentLoaded', function () {
            const seats = document.querySelectorAll('.seat:not(.unavailable)');
            const selectedSeatsInfo = document.getElementById('selected-seats-info');
            const totalPriceEl = document.getElementById('total-price');
            // Prices can be adjusted here
            const prices = {
                standard: 5,
                vip: 10,
                sweetbox: 15
            };
            let selectedSeats = [];
            seats.forEach(seat => {
                seat.addEventListener('click', () => {
                    seat.classList.toggle('selected');
                    const seatId = seat.textContent;
                    if (seat.classList.contains('selected')) {
                        selectedSeats.push(seat);
                    } else {
                        selectedSeats = selectedSeats.filter(s => s.textContent !== seatId);
                    }
                    updateBookingSummary();
                });
            });
            function getSeatType(seat) {
                if (seat.classList.contains('standard')) return 'standard';
                if (seat.classList.contains('vip')) return 'vip';
                if (seat.classList.contains('sweetbox')) return 'sweetbox';
                return 'standard'; // default
            }
            function updateBookingSummary() {
                const numSelected = selectedSeats.length;
                let totalPrice = 0;
                if (numSelected === 0) {
                    selectedSeatsInfo.textContent = 'No seats selected';
                    totalPriceEl.textContent = '$0.00';
                    return;
                }
                const seatIds = selectedSeats.map(s => {
                    totalPrice += prices[getSeatType(s)];
                    return s.textContent;
                }).join(', ');
                selectedSeatsInfo.textContent = `${numSelected} Seat${numSelected > 1 ? 's' : ''}: ${seatIds}`;
                totalPriceEl.textContent = `$${totalPrice.toFixed(2)}`;
            }
        });
    </script>

</body>
</html>